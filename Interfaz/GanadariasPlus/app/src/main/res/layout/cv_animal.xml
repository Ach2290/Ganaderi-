<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_idAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID ANIMAL"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/tv_fechaAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="EDAD ANIMAL"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/tv_sexoAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="SEXO ANIMAL"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/tv_tipoAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TIPO ANIMAL"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>